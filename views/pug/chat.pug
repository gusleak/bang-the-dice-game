html
  head
    title BANG! The Dice Game
    meta(name='description', content='Home page')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/public/style.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous")
    script(src='https://code.playcanvas.com/playcanvas-stable.min.js')
  body
  div#cont.container-fluid
    img#img-logo.img-fluid(src='/public/images/bang_logo.png')
    .chat.center
      h3#room-id-text.center Room ID: 
        span#room-id  
      h5.center#num-users
      span#announce-turn Waiting to start
      p.center#announce
      div.board.p-4
        div.row.align-items-start.mt-2
          .col.row.justify-content-start
            .col.pos-border#pos0
            .col
              .row
                .col.pos-health#health0
              .row
                .col.pos-arrow#arrow0
          .col.row.justify-content-center
            .col.pos-border#pos1
            .col
              .row
                .col.pos-health#health1
              .row
                .col.pos-arrow#arrow1
          .col.row.justify-content-end
            .col.pos-border#pos2
            .col
              .row
                .col.pos-health#health2
              .row
                .col.pos-arrow#arrow2
        div.row.align-items-center.mt-4
          .col.row.justify-content-start
            .col.pos-border#pos7
            .col
              .row
                .col.pos-health#health7
              .row
                .col.pos-arrow#arrow7
          .col.justify-content-center
            .row
              .col#arrow-area
            .row.mt-2
              .col#dice-area
          .col.row.justify-content-end
            .col.pos-border#pos3
            .col
              .row
                .col.pos-health#health3
              .row
                .col.pos-arrow#arrow3
        div.row.align-items-end.mt-4
          .col.row.justify-content-start
            .col.pos-border#pos6
            .col
              .row
                .col.pos-health#health6
              .row
                .col.pos-arrow#arrow6
          .col.row.justify-content-center
            .col.pos-border#pos5
            .col
              .row
                .col.pos-health#health5
              .row
                .col.pos-arrow#health5
          .col.row.justify-content-end
            .col.pos-border#pos4
            .col
              .row
                .col.pos-health#health4
              .row
                .col.pos-arrow#arrow4
      div.chat-box
        ul#messages
        form.game-form#msg-form(action='')
          input.rounded#m(autocomplete='off', placeholder='Type a chat message')
          button.btn.btn-sm.btn-outline-secondary
            i.fas.fa-angle-right
        form.game-form#rdy-form(action='')
          button.btn.btn-dark#rdy-btn READY
        form.game-form.hide#start-form(action='')
          button.btn.btn-dark#start-btn Start Game
        form.game-form.hide#roll-form(action='')
          button.btn.btn-dark#roll-btn Roll Dice
        form.game-form.hide#reroll-form(action='')
          button.btn.btn-dark#reroll-btn Re-Roll 
            span#dice-num
        form.game-form.hide#end-turn-form(action='')
          button.btn.btn-dark#end-turn-btn End Turn
      hr
      audio(src="/public/sounds/bang.mp3" type="audio/mpeg" preload="auto")#bang-sound
      audio(src="/public/sounds/beer.mp3" type="audio/mpeg" preload="auto")#beer-sound
      audio(src="/public/sounds/gatling.mp3" type="audio/mpeg" preload="auto")#gatling-sound
      audio(src="/public/sounds/dynamite.mp3" type="audio/mpeg" preload="auto")#dynamite-sound
      audio(src="/public/sounds/arrow.mp3" type="audio/mpeg" preload="auto")#arrow-sound
      audio(src="/public/sounds/crow.mp3" type="audio/mpeg" preload="auto")#crow-sound
      h2.center 
      .logout.left
        a(href='/logout').text Logout
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js")
    <script src='/socket.io/socket.io.js'></script>
    script(async, defer, src='/public/client.js')