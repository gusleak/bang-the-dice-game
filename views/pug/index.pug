html
  head
    title BANG! The Dice Game
    meta(name='description', content='Home page')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/public/style.css')
  body
    h1.center
      img#img-logo(src='/public/images/bang_logo.png')
    h2.center#pug-success-message THE DICE GAME! ONLINE! #{title}
    
    if showLogin
      h2.center
      form(action='/login', method='post').center
        div
          input(type='text', id="play-input", name='username', placeholder="Name", autocomplete="off", pattern="[a-zA-Z0-9]*", maxlength="12", required)
        div.hide
          input(type='password', name='password', placeholder="Password", value=' ')
        div
          input(class='btn', id="play-btn", type='submit', value='Play')
      p.center#pug-variable=message

    if showCreateGame
      h2.center Create New Game
      form(action='/create', method='post').center   
        div
          input(class='btn', type='submit', value='New Game')
      h2.center Join Game
      form(action='/join', method='post').center
        div
          input(type='text', name='gameId')
        div
          input(class='btn', type='submit', value='Join Game')
      
      h2.center 
      .logout.center
        a(href='/logout').text Logout

    div#copyright.center
      footer#footer-1
        small BANG! is a - registered – trademark of daVinci Editrice S.r.l.
        div
          small dV Giochi is a - registered – trademark of daVinci Editrice S.r.l. 
